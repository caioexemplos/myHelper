@model Faros.FrontEnd.Models.AdotarDTO
@{
    ViewData["Title"] = "ContatoAdotar";
}

<h2>ContatoAdotar</h2>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="line thin"></div>
            <div class="page-description">
                <img src="@Url.Content(Model.Animal.FotoArquivo.Path)" alt="IMG-BENNER" />
                <br /> <br /> <br />
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <h3><strong>Animal:</strong>@Model.Animal.Nome</h3>
                        <p>
                            Esse é um pequeno cadastro para a adoção do nosso querido @Model.Animal.Nome.
                            Nós da Faros iremos entrar em contato para marcarmos uma visita!

                            Obrigado
                        </p>
                        <p>
                            <!--Phone: <span class="bold">+123 45 678 9</span> <br>-->
                            Email: <span class="bold">abrigofrasodajuda@gmail.com</span>
                            <br>
                            <br>
                            Rua Alziro de Oliveira 2800<br>
                            Jd. Morumbi , Bragança Paulista SP
                        </p>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        @using (Html.BeginForm("ContatoAdotar", "Album", FormMethod.Post))
                        {
                        <form class="row contact" id="contact-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Nome(obrigatório): <span class="required"></span></label>
                                    @Html.TextBoxFor(model => model.NomeAdotante, new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Telefone(obrigatório): </label>
                                    @Html.TextBoxFor(model => model.TelefoneAdotante, new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email(obrigatório): </label>
                                    @Html.TextBoxFor(model => model.EmailAdotante, new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" asp-for="Animal.Id" class="form-control input-sm" value="@Model.Animal.Id" hidden>

                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Sua Mensagem: <span class="required"></span></label>
                                    @Html.TextAreaFor(model => model.Mensagem, new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" id="submitButton" class="btn btn-primary">Enviar Mensagem</button>
                            </div>
                        </form>
                        }
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

<script>
        $(document).ready(function () {
        $("#submitButton").on("click", function () {
            alert('O Seu pedido de adoção será analisado e retornado! OBRIGADO!');
        });

    });
</script>