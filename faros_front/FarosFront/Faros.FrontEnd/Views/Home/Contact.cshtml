@model Faros.FrontEnd.Models.ContatoDTO

@{
    ViewData["Title"] = "Contact";
}

<section class="page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h1 class="page-title">Contato</h1>
                <br />
                <section class="maps">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3674.7381009736714!2d-46.53906098456493!3d-22.923028885003465!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ceca4041d035e3%3A0x709e472da35e0930!2sR.+Alziro+de+Oliveira%2C+2800+-+Res.+Hipica+Jaguari%2C+Bragan%C3%A7a+Paulista+-+SP!5e0!3m2!1spt-BR!2sbr!4v1542110906219" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                </section>
                <br />
                <div class="line thin"></div>
                <div class="page-description">


                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <h3>Fale Conosco!</h3>
                                <p>
                                    Faça uma pergunta para a Faros,responderemos assim que possível!
                                </p>
                                <p>
                                    <!--Phone: <span class="bold">+123 45 678 9</span> <br>-->
                                    Email: <span class="bold">abrigofrasodajuda@gmail.com</span>
                                    <br>
                                    <br>
                                    Rua Alziro de Oliveira 2800<br>
                                    Jd. Morumbi , Bragança Paulista SP
                                </p>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                                {
                                    <form class="row contact" id="contact-form">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Nome <span class="required"></span></label>
                                                @Html.TextBoxFor(model=> model.Nome, new { @class = "form-control" })
                                       
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Email <!--<span class="required"></span>--></label>
                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                               
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Assunto</label>
                                                @Html.TextBoxFor(model => model.Assunto, new { @class = "form-control" })
                                               
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Sua Mensagem: <span class="required"></span></label>
                                                    @Html.TextAreaFor(model => model.Mensagem, new { @class = "form-control" })
                                                   
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-primary">Enviar Mensagem</button>
                                            </div>
                                        </form>
                                    }
                                </div>

                            </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <br />
