@model AuthApp.ViewModels.LoginModel
@{Layout = "_Layout";
}


<h2>Hello, User!</h2>

<a asp-action="Register" asp-controller="Account">Registration</a>

<form  asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="Email">Enter Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
		<br/>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn" />
        </div>
    </div>
</form>
</section>